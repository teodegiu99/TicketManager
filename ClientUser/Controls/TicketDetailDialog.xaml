<UserControl
    x:Class="ClientUser.TicketDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ClientUser"
    xmlns:converters="using:ClientUser.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:StringToImageSourceConverter x:Key="ImageConverter"/>
    </UserControl.Resources>

    <ScrollViewer MaxHeight="600" Padding="0,0,12,0">
        <StackPanel Spacing="16">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                        <TextBlock Text="{x:Bind Ticket.Nticket}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{x:Bind Ticket.DataCreazioneFormatted}" VerticalAlignment="Center" Opacity="0.6"/>
                </StackPanel>
                <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Ticket.StatoNome}" FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <TextBlock Text="{x:Bind Ticket.Titolo}" Style="{ThemeResource SubtitleTextBlockStyle}" TextWrapping="Wrap"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Descrizione" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,4"/>
                <Border Grid.Row="1" Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="8" Padding="12">
                    <TextBlock Text="{x:Bind Ticket.Testo}" TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <Grid ColumnSpacing="16" RowSpacing="12" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Urgenza" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind Ticket.UrgenzaNome}" FontWeight="SemiBold" Foreground="OrangeRed"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Tipologia" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind Ticket.TipologiaNome}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Sede" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind Ticket.SedeNome}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Postazione" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind Ticket.Macchina}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Visibility="{x:Bind HasPerContoDi}">
                    <TextBlock Text="Aperto per conto di" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind Ticket.PerContoDi}" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Grid>

            <StackPanel Visibility="{x:Bind HasScreenshot}">
                <TextBlock Text="Allegato" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,4"/>
                <Image Source="{x:Bind Ticket.ScreenshotPath, Converter={StaticResource ImageConverter}}" 
                       MaxHeight="300" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Left"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>