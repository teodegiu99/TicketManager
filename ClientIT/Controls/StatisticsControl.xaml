<UserControl
    x:Class="ClientIT.Controls.StatisticsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="24">
        <StackPanel Spacing="12">
            <TextBlock Text="Statistiche Ticket" Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBlock Text="Qui verranno visualizzati i grafici e i report." Opacity="0.6"/>

            <Border Height="200" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Background="{ThemeResource LayerFillColorAltBrush}">
                <TextBlock Text="Area Grafici (In Sviluppo)" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>