<UserControl
    x:Class="ClientIT.Controls.TicketDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientIT.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ClientIT.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="DetailLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style x:Key="DetailValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </UserControl.Resources>

    <Grid Padding="0,16,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" ColumnSpacing="24" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Richiedente" Style="{StaticResource DetailLabelStyle}"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PersonPicture Width="24" Initials="{x:Bind ViewModel.Username.Substring(0,1), Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.Username, Mode=OneWay}" Style="{StaticResource DetailValueStyle}" Margin="0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{x:Bind ViewModel.Funzione, Mode=OneWay}" FontSize="12" Opacity="0.5"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Postazione" Style="{StaticResource DetailLabelStyle}"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE7F4;" FontSize="14"/>
                    <TextBlock Text="{x:Bind ViewModel.Macchina, Mode=OneWay}" FontWeight="SemiBold"/>
                </StackPanel>
                <TextBlock Text="{x:Bind ViewModel.SedeNome, Mode=OneWay}" FontSize="12" Opacity="0.5" Margin="24,2,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Data Creazione" Style="{StaticResource DetailLabelStyle}"/>
                <TextBlock Text="{x:Bind FormatDate(ViewModel.DataCreazione), Mode=OneWay}" Style="{StaticResource DetailValueStyle}"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" Padding="0,0,12,0">
            <StackPanel>

                <TextBlock Text="Oggetto" Style="{StaticResource DetailLabelStyle}"/>
                <TextBlock Text="{x:Bind ViewModel.Titolo, Mode=OneWay}" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                <TextBlock Text="Descrizione" Style="{StaticResource DetailLabelStyle}"/>
                <Border Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="4" Padding="12" Margin="0,0,0,24">
                    <TextBlock Text="{x:Bind ViewModel.Testo, Mode=OneWay}" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                </Border>

                <Button x:Name="BtnScreenshot"
                        Visibility="{x:Bind HasScreenshot(ViewModel.ScreenshotPath), Mode=OneWay}"
                        Click="BtnScreenshot_Click"
                        Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE91B;"/>
                        <TextBlock Text="Visualizza Screenshot Allegato"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Note IT (Admin)" Style="{StaticResource DetailLabelStyle}"/>
                <TextBox Text="{x:Bind ViewModel.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="200" 
                         Margin="0,0,0,24"
                         PlaceholderText="Scrivi qui le note interne..."
                         LostFocus="NoteTextBox_LostFocus"/>

                <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,0,0,24"/>

                <TextBlock Text="Gestione Ticket" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

                <Grid ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="TipologiaCombo" Grid.Row="0" Grid.Column="0" 
                              Header="Tipologia" HorizontalAlignment="Stretch"
                              DisplayMemberPath="Nome" SelectedValuePath="Id" 
                              SelectionChanged="TipologiaComboBox_SelectionChanged"/>

                    <ComboBox x:Name="UrgenzaCombo" Grid.Row="0" Grid.Column="1" 
                              Header="Urgenza" HorizontalAlignment="Stretch"
                              DisplayMemberPath="Nome" SelectedValuePath="Id" 
                              SelectionChanged="UrgenzaComboBox_SelectionChanged"/>

                    <ComboBox x:Name="StatoCombo" Grid.Row="1" Grid.Column="0" 
                              Header="Stato" HorizontalAlignment="Stretch"
                              DisplayMemberPath="Nome" SelectedValuePath="Id" 
                              SelectionChanged="StatoComboBox_SelectionChanged"/>

                    <ComboBox x:Name="AssegnatoCombo" Grid.Row="1" Grid.Column="1" 
                              Header="Assegna a" HorizontalAlignment="Stretch"
                              DisplayMemberPath="UsernameAd" SelectedValuePath="Id" 
                              SelectionChanged="AssegnatoaComboBox_SelectionChanged"/>
                </Grid>

                <Rectangle Height="40"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>