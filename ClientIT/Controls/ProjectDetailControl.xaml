<UserControl
    x:Class="ClientIT.Controls.ProjectDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ClientIT.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" Margin="0,0,24,0">
            <StackPanel Spacing="24">
                <Button Click="Back_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72B;"/>
                        <TextBlock Text="Torna alla lista"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="{x:Bind Project.Titolo, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" TextWrapping="Wrap"/>

                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{x:Bind Project.StatoColor, Mode=OneWay}" CornerRadius="4" Padding="8,4">
                        <TextBlock Text="{x:Bind Project.StatoNome, Mode=OneWay}" Foreground="White" FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.6">
                        <Run Text="Data Inizio: "/>
                        <Run Text="{x:Bind Project.DataInizio, Mode=OneWay, Converter={StaticResource DateToStringConverter}}"/>
                    </TextBlock>
                </Grid>

                <TextBlock Text="Descrizione" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="{x:Bind Project.Descrizione, Mode=OneWay}" TextWrapping="Wrap" Opacity="0.8"/>

                <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <InfoBar Severity="Informational" IsOpen="True" IsClosable="False" 
                         Title="Gestione Fasi" Message="Per modificare le fasi o vedere la roadmap completa, usa la modalitÃ  Modifica (da implementare)."/>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Column="1" Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="8" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Commenti &amp; Note" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

            <ListView x:Name="CommentsList" Grid.Row="1" ItemsSource="{x:Bind Comments}" SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:CommentoViewModel">
                        <Grid Margin="0,0,0,12" HorizontalAlignment="{x:Bind Allineamento}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Spacing="6" Margin="4,0,0,2">
                                <TextBlock Text="{x:Bind Username}" FontWeight="Bold" FontSize="11"/>
                                <TextBlock Text="{x:Bind DataFormat}" Opacity="0.5" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border Grid.Row="1" Background="{x:Bind Sfondo}" CornerRadius="8" Padding="12">
                                <TextBlock Text="{x:Bind Testo}" TextWrapping="Wrap" MaxWidth="250"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2" Margin="0,16,0,0" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtCommento" PlaceholderText="Scrivi un commento..." AcceptsReturn="True" MaxHeight="80"/>
                <Button Grid.Column="1" Style="{ThemeResource AccentButtonStyle}" VerticalAlignment="Bottom" Click="SendComment_Click">
                    <FontIcon Glyph="&#xE725;"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>