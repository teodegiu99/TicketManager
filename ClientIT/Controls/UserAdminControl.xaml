<UserControl
    x:Class="ClientIT.Controls.UserAdminControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Gestione Utenti" Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBlock Text="Sblocco account, reset password e verifiche Active Directory" Opacity="0.6"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="12" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtSearchUser" PlaceholderText="Username (es. m.rossi)" KeyDown="TxtSearchUser_KeyDown"/>
            <Button Grid.Column="1" Click="BtnSearch_Click" Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE721;"/>
                    <TextBlock Text="Cerca"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Click="BtnClear_Click" Content="Pulisci"/>
        </Grid>

        <ProgressBar x:Name="LoadingBar" Grid.Row="1" VerticalAlignment="Bottom" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,0,-10"/>

        <Border Grid.Row="2" Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,24"
                Visibility="{x:Bind IsInfoVisible, Mode=OneWay}">
            <Grid ColumnSpacing="24" RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <PersonPicture Grid.RowSpan="3" Initials="{x:Bind UserInitials, Mode=OneWay}" Width="64"/>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="Nome Completo" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind CurrentDisplayName, Mode=OneWay}" FontWeight="SemiBold" FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="Email" Opacity="0.6" FontSize="12"/>
                    <TextBlock Text="{x:Bind CurrentEmail, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Stato Account" Opacity="0.6" FontSize="12"/>
                        <Border Background="{x:Bind StatusColor, Mode=OneWay}" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Margin="0,4,0,0">
                            <TextBlock Text="{x:Bind StatusText, Mode=OneWay}" Foreground="White" FontSize="12" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Disabilitato" Opacity="0.6" FontSize="12"/>
                        <TextBlock Text="{x:Bind DisabledText, Mode=OneWay}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,8,0,0" Spacing="4">
                    <TextBlock Text="{x:Bind PasswordInfo, Mode=OneWay}" FontSize="12" Foreground="OrangeRed"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="3" Visibility="{x:Bind IsInfoVisible, Mode=OneWay}">
            <StackPanel Spacing="16">
                <TextBlock Text="Azioni Rapide" Style="{ThemeResource SubtitleTextBlockStyle}"/>

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnUnlock" HorizontalAlignment="Stretch" Click="BtnUnlock_Click" 
                            IsEnabled="{x:Bind IsLocked, Mode=OneWay}">
                        <StackPanel Spacing="8" Padding="12">
                            <FontIcon Glyph="&#xE785;" FontSize="24" Foreground="Green"/>
                            <TextBlock Text="Sblocca Account" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Text="Rimuove il blocco per troppi tentativi" FontSize="11" Opacity="0.6" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnToggleEnable" Grid.Column="1" HorizontalAlignment="Stretch" Click="BtnToggleEnable_Click">
                        <StackPanel Spacing="8" Padding="12">
                            <FontIcon Glyph="&#xE71A;" FontSize="24" Foreground="Gray"/>
                            <TextBlock Text="{x:Bind EnableButtonText, Mode=OneWay}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Text="Modifica l'accesso al dominio" FontSize="11" Opacity="0.6" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,8"/>

                <StackPanel Spacing="12" Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="8" Padding="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8D7;"/>
                        <TextBlock Text="Reset Password" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="TxtNewPwd" PlaceholderText="Nuova Password (lascia vuoto per default: Ciaociao1!)"/>
                        <Button Grid.Column="1" Content="Genera Random" Click="BtnGenPwd_Click"/>
                    </Grid>

                    <CheckBox x:Name="ChkChangeAtLogon" Content="L'utente deve cambiare la password al prossimo accesso" IsChecked="True"/>

                    <Button x:Name="BtnResetPwd" Content="Applica Reset Password" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" Click="BtnResetPwd_Click"/>
                </StackPanel>

                <InfoBar x:Name="FeedbackInfoBar" IsOpen="False" Margin="0,16,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>