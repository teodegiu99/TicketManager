<UserControl
    x:Class="ClientIT.Controls.TicketItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientIT.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ClientIT.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="BadgeBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="{ThemeResource LayerFillColorAltBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </Style>
        <Style x:Key="BadgeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- Card Principale -->
    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" 
            CornerRadius="8" 
            BorderThickness="4,1,1,1" 
            BorderBrush="{x:Bind ViewModel.StatusBorderBrush, Mode=OneWay}"
            Margin="0,0,0,12"
            Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header & Info -->
            <RowDefinition Height="Auto"/>
            <!-- Divider -->
            <RowDefinition Height="Auto"/>
            <!-- Action Bar -->
        </Grid.RowDefinitions>

        <!-- PARTE SUPERIORE: INFO TICKET -->
        <StackPanel Grid.Row="0" Padding="16,16,16,12" Spacing="12">

            <!-- Riga 1: ID e Data -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="{x:Bind ViewModel.TipologiaBrush, Mode=OneWay}" 
                        CornerRadius="4" Padding="6,2">
                    <TextBlock Text="{x:Bind ViewModel.Nticket, Mode=OneWay}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="11"/>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6" Opacity="0.6">
                    <FontIcon Glyph="&#xE787;" FontSize="12"/>
                    <TextBlock Text="{x:Bind FormatDate(ViewModel.DataCreazione), Mode=OneWay}" 
                               FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Riga 2: Titolo -->
            <TextBlock Text="{x:Bind ViewModel.Titolo, Mode=OneWay}" 
                       Foreground="{x:Bind ViewModel.TipologiaBrush, Mode=OneWay}"
                       Style="{ThemeResource SubtitleTextBlockStyle}" 
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Spacing="4" 
                        Visibility="{x:Bind ViewModel.PerContoDiVisibility, Mode=OneWay}">
                <FontIcon Glyph="&#xE77B;" FontSize="12" Foreground="OrangeRed"/>
                <TextBlock Text="Ticket creato per conto di:" 
                           FontSize="12" 
                           Foreground="OrangeRed" 
                           FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind ViewModel.PerContoDi, Mode=OneWay}" 
                           FontSize="12" 
                           Foreground="OrangeRed" 
                           FontWeight="Bold"/>
            </StackPanel>
            <!-- Riga 3: Badge Info (Solo Sede e Utente ora, il resto Ã¨ modificabile sotto) -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Utente -->
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <PersonPicture Width="20" Initials="{x:Bind ViewModel.Username.Substring(0,1), Mode=OneWay}" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Bind ViewModel.Username, Mode=OneWay}" 
                               FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Macchina -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" Opacity="0.7">
                    <FontIcon Glyph="&#xE7F4;" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Bind ViewModel.Macchina, Mode=OneWay}" 
                               FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Badge Sede (Informazione statica) -->
            <Border HorizontalAlignment="Left" Style="{StaticResource BadgeBorderStyle}">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon Glyph="&#xE81D;" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.SedeNome, Mode=OneWay}" Style="{StaticResource BadgeTextStyle}"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- DIVIDER -->
        <Border Grid.Row="1" Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Opacity="0.5"/>

        <!-- PARTE INFERIORE: ACTION BAR -->
        <Grid Grid.Row="2" Background="{ThemeResource LayerFillColorAltBrush}" Padding="12" CornerRadius="0,0,8,8" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Tipologia -->
                <ColumnDefinition Width="*"/>
                <!-- Urgenza -->
                <ColumnDefinition Width="*"/>
                <!-- Stato -->
                <ColumnDefinition Width="*"/>
                <!-- Assegnato -->
            </Grid.ColumnDefinitions>

            <!-- Tipologia -->
            <ComboBox x:Name="TipologiaCombo"
                      Grid.Column="0"
                      Header="Tipologia"
                      HorizontalAlignment="Stretch"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectionChanged="TipologiaComboBox_SelectionChanged"/>

            <!-- Urgenza -->
            <ComboBox x:Name="UrgenzaCombo"
                      Grid.Column="1"
                      Header="Urgenza"
                      HorizontalAlignment="Stretch"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectionChanged="UrgenzaComboBox_SelectionChanged"/>

            <!-- Stato -->
            <ComboBox x:Name="StatoCombo"
                      Grid.Column="2"
                      Header="Stato"
                      HorizontalAlignment="Stretch"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectionChanged="StatoComboBox_SelectionChanged"/>

            <!-- Assegnatario -->
            <ComboBox x:Name="AssegnatoCombo"
                      Grid.Column="3"
                      Header="Assegna a"
                      HorizontalAlignment="Stretch"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectionChanged="AssegnatoaComboBox_SelectionChanged"/>
        </Grid>
    </Grid>
</UserControl>