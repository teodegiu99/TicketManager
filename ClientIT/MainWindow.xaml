<Window
    x:Class="ClientIT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientIT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ClientIT.Models"
    xmlns:controls="using:ClientIT.Controls"
    mc:Ignorable="d"
    x:Name="ThisPage">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="240" MaxWidth="320"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ProgressRing x:Name="LoadingProgressRing" 
                      Grid.ColumnSpan="2" IsActive="False" Visibility="Collapsed"
                      Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.ZIndex="999"/>

        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,12">
                <TextBlock Text="Team IT" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <Button x:Name="ShowAllButton" HorizontalAlignment="Stretch" Click="ShowAllButton_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;"/>
                        <TextBlock Text="Tutti i Ticket"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Border Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <ListView x:Name="UserListView" Padding="4" SelectionMode="Single" SelectionChanged="UserListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ItUtente">
                            <Grid Padding="8" ColumnDefinitions="Auto, *">
                                <PersonPicture Width="32" Initials="{x:Bind Nome.Substring(0,1), Mode=OneWay}" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Nome}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{x:Bind Permesso}" FontSize="11" Opacity="0.6"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <Button Grid.Row="2" Margin="0,12,0,0" HorizontalAlignment="Stretch" Click="NewTicketButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;"/>
                    <TextBlock Text="Nuovo Ticket"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="3" Margin="0,8,0,0" HorizontalAlignment="Stretch" Click="StatsButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE9D2;"/>
                    <TextBlock Text="Statistiche"/>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Column="1">

            <Grid x:Name="NewTicketViewArea" Visibility="Collapsed">
                <controls:NewTicketControl x:Name="NewTicketControl"/>
            </Grid>

        </Grid>
        <Grid Grid.Column="1">

            <Grid x:Name="ListViewArea" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <AutoSuggestBox x:Name="SearchBox" Grid.Column="0" QueryIcon="Find" PlaceholderText="Cerca..." HorizontalAlignment="Stretch" VerticalAlignment="Center" QuerySubmitted="SearchBox_QuerySubmitted"/>

                    <Button Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71C;"/>
                            <TextBlock Text="Filtri"/>
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout Placement="BottomEdgeAlignedRight">
                                <Grid Width="340" RowSpacing="16" Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE71C;"/>
                                        <TextBlock Text="Filtri Avanzati" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Spacing="12">
                                        <TextBox x:Name="FilterNticket" Header="Numero Ticket" PlaceholderText="Es: 1234"/>
                                        <ComboBox x:Name="FilterStato" Header="Stato" HorizontalAlignment="Stretch" ItemsSource="{x:Bind AllStati}" DisplayMemberPath="Nome" SelectedValuePath="Id" PlaceholderText="Qualsiasi"/>
                                        <ComboBox x:Name="FilterAssegnato" Header="Assegnato a" HorizontalAlignment="Stretch" ItemsSource="{x:Bind AllItUsers}" DisplayMemberPath="Nome" SelectedValuePath="Id" PlaceholderText="Qualsiasi"/>
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="FilterTipologia" Grid.Column="0" Header="Tipologia" HorizontalAlignment="Stretch" ItemsSource="{x:Bind AllTipologie}" DisplayMemberPath="Nome" SelectedValuePath="Id" PlaceholderText="Tutte"/>
                                            <ComboBox x:Name="FilterUrgenza" Grid.Column="1" Header="Urgenza" HorizontalAlignment="Stretch" ItemsSource="{x:Bind AllUrgenze}" DisplayMemberPath="Nome" SelectedValuePath="Id" PlaceholderText="Tutte"/>
                                        </Grid>
                                        <ComboBox x:Name="FilterSede" Header="Sede" HorizontalAlignment="Stretch" ItemsSource="{x:Bind AllSedi}" PlaceholderText="Qualsiasi"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Spacing="12">
                                        <TextBox x:Name="FilterMacchina" Header="Nome PC / Macchina" PlaceholderText="WZBLB52"/>
                                        <TextBox x:Name="FilterUsername" Header="Richiedente (Username)" PlaceholderText="Matteo De Giuseppe"/>
                                    </StackPanel>
                                    <Grid Grid.Row="3" Margin="0,8,0,0" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="Resetta" HorizontalAlignment="Stretch" Click="ResetFilters_Click"/>
                                        <Button Content="Applica" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" Grid.Column="1" Click="ApplyFilters_Click"/>
                                    </Grid>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>

                    <Button Grid.Column="2" Margin="8,0,0,0" VerticalAlignment="Center" Click="RefreshButton_Click" ToolTipService.ToolTip="Aggiorna lista">
                        <FontIcon Glyph="&#xE72C;"/>
                    </Button>
                </Grid>

                <ListView x:Name="TicketListView" Grid.Row="1" SelectionMode="None" IsItemClickEnabled="True" ItemClick="TicketListView_ItemClick" Tag="{x:Bind}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,8"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:TicketViewModel">
                            <controls:TicketItemControl ViewModel="{x:Bind}" 
                                                        StatoOptions="{Binding ElementName=TicketListView, Path=Tag.AllStati}"
                                                        AssigneeOptions="{Binding ElementName=TicketListView, Path=Tag.AllItUsers}"
                                                        TipologiaOptions="{Binding ElementName=TicketListView, Path=Tag.AllTipologie}"
                                                        UrgenzaOptions="{Binding ElementName=TicketListView, Path=Tag.AllUrgenze}"
                                                        TicketStateChanged="OnTicketStateChanged"
                                                        TicketAssigneeChanged="OnTicketAssigneeChanged"
                                                        TicketPropertyChanged="OnTicketPropertyChanged"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid x:Name="DetailViewArea" Visibility="Collapsed" Background="{ThemeResource LayerFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                    <Button Click="BackToList_Click" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72B;"/>
                            <TextBlock Text="Torna alla lista"/>
                        </StackPanel>
                    </Button>
                    <Border Height="20" Width="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,4"/>
                    <TextBlock Text="Dettaglio Ticket" VerticalAlignment="Center" FontWeight="SemiBold" Opacity="0.8"/>
                </StackPanel>
                <controls:TicketDetailControl x:Name="DetailControl" Grid.Row="1"
                    TicketStateChanged="OnTicketStateChanged"
                    TicketAssigneeChanged="OnTicketAssigneeChanged"
                    TicketPropertyChanged="OnTicketPropertyChanged"/>
            </Grid>

            <Grid x:Name="StatisticsViewArea" Visibility="Collapsed">
                <controls:StatisticsControl x:Name="StatsControl"/>
            </Grid>

        </Grid>
    </Grid>
</Window>