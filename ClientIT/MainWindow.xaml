<Window
    x:Class="ClientIT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientIT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ClientIT.Models"
    xmlns:controls="using:ClientIT.Controls"
    mc:Ignorable="d"
    x:Name="ThisPage">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <!-- Layout Principale a 2 colonne -->
    <Grid x:Name="RootGrid" Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="220"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- Indicatore di Caricamento -->
        <ProgressRing x:Name="LoadingProgressRing" 
                      Grid.ColumnSpan="2"
                      IsActive="False"
                      Visibility="Collapsed"
                      Width="60" Height="60"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Canvas.ZIndex="999"/>

        <!-- === COLONNA SINISTRA: FILTRI UTENTI === -->
        <Grid Grid.Column="0" Margin="0,0,16,0" RowDefinitions="Auto, *">

            <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,12">
                <TextBlock Text="Team IT" Style="{ThemeResource SubtitleTextBlockStyle}"/>

                <Button x:Name="ShowAllButton" 
                        HorizontalAlignment="Stretch"
                        Click="ShowAllButton_Click"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;"/>
                        <TextBlock Text="Tutti i Ticket"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Border Grid.Row="1"
                    Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">

                <ListView x:Name="UserListView" 
                          Padding="4"
                          SelectionMode="Single"
                          SelectionChanged="UserListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ItUtente">
                            <Grid Padding="8" ColumnDefinitions="Auto, *">
                                <PersonPicture Width="32" 
                                               Initials="{x:Bind UsernameAd.Substring(0,1), Mode=OneWay}" 
                                               Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind UsernameAd}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{x:Bind Permesso}" FontSize="11" Opacity="0.6"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <!-- === COLONNA DESTRA: LISTA TICKET === -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">

            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock x:Name="WelcomeMessage" 
                           Style="{ThemeResource TitleTextBlockStyle}" 
                           Text="Gestione Ticket"/>
                <TextBlock Text="Visualizza e gestisci le richieste di assistenza" 
                           Style="{ThemeResource BodyTextBlockStyle}" 
                           Opacity="0.6"/>
            </StackPanel>

            <!-- 
                TRUCCO DEL TAG: 
                Tag="{x:Bind}" lega l'istanza della finestra (MainWindow) alla proprietà Tag della ListView.
                Questo ci permette di accedere alle liste AllStati/AllItUsers dall'interno del DataTemplate.
            -->
            <ListView x:Name="TicketListView" 
                      Grid.Row="1"
                      SelectionMode="None"
                      Tag="{x:Bind}">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,8"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TicketViewModel">

                        <!-- 
                            BINDING AGGIORNATO:
                            Usiamo ElementName=TicketListView per trovare la lista,
                            e Path=Tag.AllStati per prendere la lista dalla finestra salvata nel Tag.
                        -->
                        <controls:TicketItemControl 
                            ViewModel="{x:Bind}"
                            StatoOptions="{Binding ElementName=TicketListView, Path=Tag.AllStati}"
                            AssigneeOptions="{Binding ElementName=TicketListView, Path=Tag.AllItUsers}"
                            TicketStateChanged="OnTicketStateChanged"
                            TicketAssigneeChanged="OnTicketAssigneeChanged"/>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>